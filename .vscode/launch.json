{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: AoC run",
      "type": "python",
      "request": "launch",
      "module": "aoc.run",
      "args": ["${input:year}", "${input:day}", "${input:part}", "test"]
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "description": "Year to run",
      "id": "year",
      "type": "pickString",
      "options": ["2024", "2023", "2022", "2021", "2020", "2019"],
      "default": "2024"
    },
    {
      "description": "Day to run",
      "id": "day",
      "type": "promptString"
    },
    {
      "description": "Part to run",
      "id": "part",
      "type": "pickString",
      "options": ["1", "2"],
      "default": "2"
    }
  ]
}
